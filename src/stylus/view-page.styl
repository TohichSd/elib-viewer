@import "util/loading-placeholder.styl"

mainColor = #c3c3c3

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

input[type=number] {
  -moz-appearance: textfield;
}

.page-container
  loading-placeholder(#ff5640)
  
  .lds-ellipsis div
    top 1%

  .lighten
    opacity: 0.3

  .page
    background-color white
    

  //border 2px solid black
  border-radius 10px
  margin 0 auto
  padding 0 0 5px 0


  .controls
    background-color mainColor
    display flex
    flex-direction: column
    justify-content center
    align-items center
    //border-radius 5px 5px 0 0
    position sticky
    top 0

    *
      font-family: 'Roboto', sans-serif

    > div
      display inline
      margin 2px 0
      //width 30%

      > p, input
        display inline

      > p
        color: #2d2d2d

      > input
        border none


    input[type=number]
      width: 20%

  .page
    border 1px solid mainColor
    background-color white
    
