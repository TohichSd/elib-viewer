@import "util/loading-placeholder.styl"

inputColor = #ff5640
inputColor1 = #ff1818

.login
  .form-login
    loading-placeholder(white)
  
    .lds-ellipsis div
      top -15px
  
    display flex
    flex-direction column
    width 350px
    margin 0 auto
    
    h2
      margin-top 0
      font-family "Roboto Thin"
    
    input, button
      border-radius 5px
    
    input
      border-width 3px
      font-size: 20px
      margin 5px 0
  
    button
      font-size: 25px
      background-color inputColor
      border none
      color white
      cursor pointer
      
      &:hover
        background-color inputColor1
        
      &:disabled
        cursor not-allowed
    