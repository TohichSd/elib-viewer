@import "util/loading-placeholder.styl"

inputColor = #ff5640
inputColor1 = #ff1818

.search

  .search-container
    display inline-block
    margin-left auto
    margin-right auto
    width 100%
  
    .search-line
      display flex
      flex-direction row
      align-items center
      width 400px
      margin 0 auto
  
      input
        font-size 30px
        width 100%
        border-width 5px
        border-right 0
        border-top-left-radius 7px
        border-bottom-left-radius 7px
  
  
      button
        font-size 25px
        padding-top: 4px
        padding-bottom: 3px
        cursor pointer
        border-bottom 5px inputColor1 solid
        border-top 5px inputColor1 solid
        border-right 5px inputColor1 solid
        border-left 0
        background-color inputColor1
        color white
        border-top-right-radius 7px
        border-bottom-right-radius 7px
  
        &:hover
          background-color #772214
          border-color #772214
          
        loading-placeholder(white)
  